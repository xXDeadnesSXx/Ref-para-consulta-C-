@model IEnumerable<DCP_OMNI.Models.Material>
@{ 
    ViewData["Title"] = "Lista de Materiais";
}
<h2>@ViewData["Title"]</h2>
<hr />
<a asp-action="Create" class="btn btn-success"><b>Novo Material</b></a>
<table class="table table-striped table-hover">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nome)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Marca)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estoque)
            </th>
            <th>
                Saída
            </th>
            <th>
                Controles
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach(var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Marca)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Estoque)
            </td>
            <td>
                <a asp-action="EstoqueOne" class="btn btn-danger"><b>1 unidade</b></a> |
                <a asp-action="EstoqueMore" class="btn btn-danger"><b>+ quantidade</b></a>
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Editar</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Excluir</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Detalhes</a>
            </td>
        </tr>
        }
    </tbody>
</table>
